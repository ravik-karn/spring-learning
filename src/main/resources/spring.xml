<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
    <bean id="parent-triangle" class="spring.Triangle">
        <property name="pointA" ref="zero-point"/>
    </bean>
    <bean id="triangle" class="spring.Triangle" parent="parent-triangle">
        <property name="pointB" ref="pointB"/>
        <property name="pointC" ref="pointC"/>
    </bean>
    <bean id="pointA" class="spring.Point">
        <constructor-arg index="0" value="0"/>
        <constructor-arg index="1" value="0"/>
    </bean>
    <bean id="pointB" class="spring.Point">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="1"/>
    </bean>
    <bean id="pointC" class="spring.Point">
        <constructor-arg index="0" value="2"/>
        <constructor-arg index="1" value="2"/>
    </bean>
    <alias name="pointA" alias="zero-point"/>
</beans>
